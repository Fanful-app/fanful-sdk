{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "declarationDir": "./dist/src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@app/*": ["src/*"],
      "@typings/*": ["typings/*"]
    }
  },
  "include": ["src/**/*", "types/types.d.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "replacers": {
      "exampleReplacer": {
        "enabled": true
      },
      "otherReplacer": {
        "enabled": true
      }
    },
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}
